<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/checkBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CBE91E63"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/square_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"/>

    <View
        android:id="@+id/validMoveIndicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="@color/validGreen"/>

    <TextView
        android:id="@+id/coord_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#80000000"
        android:padding="2dp"/>

    <TextView
        android:id="@+id/coord_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="2dp"/>

</FrameLayout>